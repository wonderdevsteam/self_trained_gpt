{
  "name": "Self trained GTP",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.vscode-pylance",
        "visualstudioexptteam.vscodeintellicode",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "ryanluker.vscode-coverage-gutters",
        "oderwat.indent-rainbow",
        "mikestead.dotenv",
        "alanwalk.markdown-toc",
        "darkriszty.markdown-table-prettify",
        "ms-python.python",
        "2gua.rainbow-brackets",
        "brainfit.vscode-importmagic",
        "littlefoxteam.vscode-python-test-adapter",
        "davidanson.vscode-markdownlint",
        "eamodio.gitlens",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "4ops.terraform",
        "run-at-scale.terraform-doc-snippets",
        "shakram02.bash-beautify",
        "markis.code-coverage",
        "ms-azuretools.vscode-docker",
        "hashicorp.terraform",
        "VisualStudioExptTeam.vscodeintellicode",
        "hbenl.vscode-test-explorer",
        "ms-python.black-formatter",
        "ms-python.isort"
      ],
      "settings": {
        "python.testing.pytestArgs": [],
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh",
            "args": ["-l"]
          }
        },
        "thunder-client.workspaceRelativePath": ".thunderclient",
        "thunder-client.showActivityFromCollection": true,
        "coverage-gutters.coverageReportFileName": "coverage/index.html",
        "coverage-gutters.showLineCoverage": true,
        "coverage-gutters.showRulerCoverage": true,
        "python.testing.pytestEnabled": true,
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.languageServer": "Pylance",
        "python.analysis.autoImportCompletions": true,
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": true
          }
        },
        "files.eol": "\n",
        "thunder-client.saveToWorkspace": true,
        "thunder-client.certificates": []
      }
    }
  }
}
